{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and test",
            "type": "shell",
            "command": "cmake . ; cmake --build . --config Release ; ctest --output-on-failure ; cpack",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Easypt source",
            "type": "process",
            "command": "./src/Release/easypt.exe",
            "args": [
                "-file",
                "${file}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        }
    ]
}